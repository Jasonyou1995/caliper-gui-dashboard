# Hyperledger Caliper GUI Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# =======================
# APPLICATION SETTINGS
# =======================
REACT_APP_NAME="Hyperledger Caliper GUI Dashboard"
REACT_APP_VERSION="1.2.0"
REACT_APP_ENVIRONMENT="development"

# =======================
# API CONFIGURATION
# =======================
REACT_APP_API_BASE_URL="http://localhost:3001/api"
REACT_APP_WEBSOCKET_URL="ws://localhost:3001"
REACT_APP_CALIPER_ENDPOINT="http://localhost:4000"

# =======================
# AUTHENTICATION SETTINGS
# =======================
REACT_APP_JWT_SECRET="your-jwt-secret-key-here"
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_ENABLE_AUTH=false

# =======================
# DASHBOARD CONFIGURATION
# =======================
REACT_APP_REFRESH_INTERVAL=5000
REACT_APP_MAX_DATA_POINTS=1000
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true

# =======================
# MOCK DATA SETTINGS
# =======================
REACT_APP_USE_MOCK_DATA=true
REACT_APP_MOCK_DELAY=1000

# =======================
# FEATURE FLAGS
# =======================
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_GRID_LAYOUT=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true

# =======================
# PERFORMANCE SETTINGS
# =======================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CODE_SPLITTING=true

# =======================
# LOGGING & DEBUGGING
# =======================
REACT_APP_LOG_LEVEL="info"
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# =======================
# EXTERNAL SERVICES
# =======================
REACT_APP_SENTRY_DSN=""
REACT_APP_ANALYTICS_ID=""

# =======================
# SECURITY SETTINGS
# =======================
REACT_APP_CSP_ENABLED=true
REACT_APP_SECURE_HEADERS=true 