{
  "name": "hyperledger-caliper-gui-dashboard",
  "version": "1.2.0",
  "description": "Production-ready GUI Dashboard for Hyperledger Caliper benchmarking framework with real-time visualization and advanced analytics",
  "author": "Jason You",
  "license": "Apache-2.0",
  "homepage": "https://github.com/jasony/caliper-gui-dashboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasony/caliper-gui-dashboard.git"
  },
  "keywords": [
    "hyperledger",
    "caliper",
    "blockchain",
    "benchmarking",
    "dashboard",
    "visualization",
    "react",
    "typescript"
  ],
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} --max-warnings 0",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md}",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "analyze": "npm run build && npx serve -s build",
    "clean": "rm -rf build node_modules/.cache",
    "dev": "npm start"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.4",
    "react-scripts": "5.0.1",
    "@reduxjs/toolkit": "^1.9.3",
    "react-redux": "^8.0.5",
    "redux-persist": "^6.0.0",
    "chart.js": "^4.2.1",
    "react-chartjs-2": "^5.2.0",
    "d3": "^5.16.0",
    "react-d3-graph": "^2.6.0",
    "bootstrap": "^5.2.3",
    "reactstrap": "^9.1.6",
    "react-notification-alert": "^0.0.13",
    "patternomaly": "^1.3.2",
    "perfect-scrollbar": "^1.5.5",
    "react-grid-layout": "^1.3.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "socket.io-client": "^4.6.1",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/node": "^18.15.3",
    "@types/d3": "^7.4.0",
    "@types/lodash": "^4.14.191",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "typescript": "^4.9.5",
    "sass": "^1.58.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "jsx-a11y"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "jsx-a11y/anchor-is-valid": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:coverage"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "resolutions": {
    "d3": "^5.16.0"
  }
}
